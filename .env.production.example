# Railway Production Environment Variables
# Copy these to Railway Dashboard â†’ Variables

APP_NAME=AureusERP
APP_ENV=production
APP_KEY=base64:GENERATE_THIS_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-app.up.railway.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_CURRENCY=USD

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Database - Railway PostgreSQL (Auto-injected)
DB_CONNECTION=pgsql
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_DATABASE=${{Postgres.PGDATABASE}}
DB_USERNAME=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Queue
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=sync

# Cache
CACHE_STORE=database
CACHE_PREFIX=

# Filesystem
FILESYSTEM_DISK=public

# Mail (use log for development, configure SMTP for production)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@aureuserp.com"
MAIL_FROM_NAME="${APP_NAME}"

# Optional: AWS S3 for file storage (if needed)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
